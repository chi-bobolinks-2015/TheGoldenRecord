<div class="container">
  <div class="p-lg">

    <h2 class='f-header'><%= @track.artist %></h2>
    <h3 class='mb-lg mt-none'><%= @track.title %></h3>

    <%= form_for @track do |f| %>

      <div class="field">
        <%= f.text_area :description, :placeholder => "Add description...", :rows => "20", class: "col-lg-12" %>
      </div>

      <div class="actions">
        <%= f.submit "Save", class: "btn btn-primary mt-m f-header fz-l bgc-sea" %>
      </div>

    <% end %>

  </div>
</div>
