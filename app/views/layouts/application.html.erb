      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="p-std pr-m"><a href="#" id="about"><%= image_tag("navigation-bar/share.png", height: '50', width: '50') %></a></li>
          <li class="p-std pr-m"><a href="#" id="start"><%= image_tag("navigation-bar/start.png", height: '50', width: '50') %></a></li>
          <li class="p-std pr-m"><a href="#" id="meet"><%= image_tag("navigation-bar/meet-team.png", height: '50', width: '50') %></a></li>
        </ul>
      </div>
    </div>
  </nav>

<%= render "tracks/about" %>
<%= render "tracks/start" %>
<%= render "tracks/meet" %>
<%= render "tracks/launch" %>

<%= yield %>

